---
import Layout from '../layouts/Layout.astro';
import partidos from '../data/partidos.json';

// Funci√≥n para parsear fecha DD/MM/YYYY
function parseFecha(fechaStr: string): Date {
  const [dia, mes, anio] = fechaStr.split('/').map(Number);
  return new Date(anio, mes - 1, dia);
}

// Obtener pr√≥ximo partido m√°s cercano
const hoy = new Date();
const proximoPartido: any = partidos
  .filter((p: any) => !p.es_resultado)
  .sort((a: any, b: any) => parseFecha(a.fecha).getTime() - parseFecha(b.fecha).getTime())[0];

// Obtener √∫ltimo resultado
const ultimoResultado: any = partidos
  .filter((p: any) => p.es_resultado)
  .sort((a: any, b: any) => parseFecha(b.fecha).getTime() - parseFecha(a.fecha).getTime())[0];
