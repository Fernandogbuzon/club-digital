---
// Ejemplo de cómo usar los datos de partidos en una página Astro
import partidosData from '../data/partidos.json';

const { partidos, ultima_actualizacion, total_partidos } = partidosData;

// Filtrar partidos por estado
const proximos = partidos.filter(p => p.estado === 'proximo');
const finalizados = partidos.filter(p => p.estado === 'finalizado');

// Ordenar próximos por fecha
const proximosOrdenados = proximos.sort((a, b) => {
  const [diaA, mesA, anioA] = a.fecha.split('/').map(Number);
  const [diaB, mesB, anioB] = b.fecha.split('/').map(Number);
  const fechaA = new Date(anioA, mesA - 1, diaA);
  const fechaB = new Date(anioB, mesB - 1, diaB);
  return fechaA.getTime() - fechaB.getTime();
});

// Función para formatear fecha
function formatearFecha(fecha: string): string {
  const [dia, mes, anio] = fecha.split('/');
  const date = new Date(parseInt(anio), parseInt(mes) - 1, parseInt(dia));
  return date.toLocaleDateString('es-ES', { 
    weekday: 'short', 
    day: 'numeric', 
    month: 'short' 
  });
}
---

<Layout title="Calendario de Partidos | ADESA 80">
  <main class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Calendario de Partidos</h1>
      <p class="text-gray-600">
        Última actualización: {new Date(ultima_actualizacion).toLocaleString('es-ES')}
      </p>
    </div>

    <!-- Estadísticas -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div class="bg-blue-100 p-4 rounded-lg">
        <h3 class="text-2xl font-bold text-blue-900">{total_partidos}</h3>
        <p class="text-blue-700">Total Partidos</p>
      </div>
      <div class="bg-green-100 p-4 rounded-lg">
        <h3 class="text-2xl font-bold text-green-900">{proximos.length}</h3>
        <p class="text-green-700">Próximos Partidos</p>
      </div>
      <div class="bg-gray-100 p-4 rounded-lg">
        <h3 class="text-2xl font-bold text-gray-900">{finalizados.length}</h3>
        <p class="text-gray-700">Finalizados</p>
      </div>
    </div>

    <!-- Próximos Partidos -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Próximos Partidos</h2>
      
      {proximosOrdenados.length === 0 ? (
        <p class="text-gray-500">No hay próximos partidos programados.</p>
      ) : (
        <div class="space-y-4">
          {proximosOrdenados.map((partido) => (
            <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <span class="inline-block bg-orange-100 text-orange-800 text-xs px-2 py-1 rounded mb-2">
                    {partido.competicion}
                  </span>
                  <h3 class="text-xl font-semibold text-gray-900">
                    {partido.categoria}
                  </h3>
                </div>
                <div class="text-right">
                  <p class="text-lg font-bold text-gray-900">
                    {formatearFecha(partido.fecha)}
                  </p>
                  {partido.hora && (
                    <p class="text-gray-600">{partido.hora}</p>
                  )}
                </div>
              </div>

              <div class="flex items-center justify-between mb-4">
                <div class="flex-1 text-right">
                  <p class={`text-lg font-semibold ${
                    partido.equipoLocal === 'ADESA 80' ? 'text-orange-600' : 'text-gray-700'
                  }`}>
                    {partido.equipoLocal}
                  </p>
                </div>
                <div class="mx-6 text-2xl font-bold text-gray-400">vs</div>
                <div class="flex-1 text-left">
                  <p class={`text-lg font-semibold ${
                    partido.equipoVisitante === 'ADESA 80' ? 'text-orange-600' : 'text-gray-700'
                  }`}>
                    {partido.equipoVisitante}
                  </p>
                </div>
              </div>

              <div class="flex items-center text-gray-600 text-sm">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                {partido.pabellon}
              </div>
            </div>
          ))}
        </div>
      )}
    </section>

    <!-- Resultados Recientes -->
    {finalizados.length > 0 && (
      <section>
        <h2 class="text-3xl font-bold mb-6">Resultados Recientes</h2>
        
        <div class="space-y-4">
          {finalizados.slice(0, 5).map((partido) => (
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
              <div class="flex justify-between items-start mb-2">
                <span class="text-sm text-gray-600">{partido.categoria}</span>
                <span class="text-sm text-gray-500">{formatearFecha(partido.fecha)}</span>
              </div>

              <div class="flex items-center justify-center">
                <div class="flex-1 text-right pr-4">
                  <p class={`font-semibold ${
                    partido.equipoLocal === 'ADESA 80' ? 'text-orange-600' : ''
                  }`}>
                    {partido.equipoLocal}
                  </p>
                </div>
                
                <div class="bg-white px-6 py-2 rounded-lg border-2 border-gray-200">
                  <span class="text-2xl font-bold">
                    {partido.resultadoLocal ?? '-'} - {partido.resultadoVisitante ?? '-'}
                  </span>
                </div>
                
                <div class="flex-1 text-left pl-4">
                  <p class={`font-semibold ${
                    partido.equipoVisitante === 'ADESA 80' ? 'text-orange-600' : ''
                  }`}>
                    {partido.equipoVisitante}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}
  </main>
</Layout>
