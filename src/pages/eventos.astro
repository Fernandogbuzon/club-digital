      <h2 class="text-display-md text-white">Pr√≥ximos Eventos</h2>
      <div class="sep-green mt-3"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {proximosEventos.filter(e => !e.destacado).map((evento) => (
        <div class="card p-5 reveal group">
          <div class="flex items-start gap-5">
