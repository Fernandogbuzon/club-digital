<Layout title="Eventos - ADESA 80">
  <!-- Hero Section -->
  <section class="relative overflow-hidden py-16 sm:py-20">
    <div class="absolute inset-0">
      <div class="absolute top-1/3 left-1/2 -translate-x-1/2 w-[400px] h-[250px] bg-adesa-green/6 rounded-full blur-[100px]"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <p class="text-caption text-adesa-green mb-3">ACTIVIDADES</p>
        <h1 class="text-display-lg text-white mb-4">
          Eventos y Torneos
        </h1>
        <p class="text-body-lg max-w-2xl mx-auto">
          Participa en nuestras actividades especiales y torneos
        </p>
      </div>
    </div>
  </section>

  <!-- Eventos Destacados -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="mb-10 reveal">
      <p class="text-caption text-adesa-green mb-2">NO TE LO PIERDAS</p>
      <h2 class="text-display-md text-white">Eventos Destacados</h2>
      <div class="sep-green mt-3"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-16">
      {proximosEventos.filter(e => e.destacado).map((evento) => (
        <div class="card group overflow-hidden reveal">
          <div class="bg-gradient-to-br from-adesa-green/20 to-adesa-dark/20 p-14 flex items-center justify-center border-b border-white/5">
            <span class="text-8xl group-hover:scale-110 transition-transform duration-300">{evento.imagen}</span>
          </div>

          <div class="p-8">
            <div class="flex items-center gap-3 mb-4">
              <span class="badge badge-green">Destacado</span>
              <span class="text-sm text-gray-500">{evento.fecha}</span>
            </div>

            <h3 class="text-xl font-bold text-white mb-3">{evento.nombre}</h3>
            <p class="text-gray-400 text-sm mb-6 leading-relaxed">{evento.descripcion}</p>

            <div class="space-y-2.5 mb-6">
              <div class="flex items-center gap-3 text-sm">
                <svg class="w-4 h-4 text-adesa-green shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-gray-300">{evento.hora}</span>
              </div>
              <div class="flex items-center gap-3 text-sm">
                <svg class="w-4 h-4 text-adesa-green shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                </svg>
                <span class="text-gray-300">{evento.ubicacion}</span>
              </div>
              <div class="flex items-center gap-3 text-sm">
                <svg class="w-4 h-4 text-adesa-green shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
