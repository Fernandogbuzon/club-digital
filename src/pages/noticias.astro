  <!-- Script para filtros -->
  <script>
    const filterButtons = document.querySelectorAll('.categoria-filter');
    const noticiaCards = document.querySelectorAll('.noticia-card');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const categoria = button.getAttribute('data-categoria');

        // Update active state
        filterButtons.forEach(btn => {
          btn.classList.remove('bg-adesa-green', 'text-white');
          btn.classList.add('bg-surface-700', 'text-gray-400', 'border', 'border-white/5');
        });
        button.classList.remove('bg-surface-700', 'text-gray-400', 'border', 'border-white/5');
        button.classList.add('bg-adesa-green', 'text-white');

        // Filter news
        noticiaCards.forEach(card => {
          if (categoria === 'all' || card.getAttribute('data-categoria') === categoria) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });
  </script>
