    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-16">
      {noticias.filter(n => n.destacada).map((noticia) => (
        <div
          class="noticia-card card group overflow-hidden"
          data-categoria={noticia.categoria}
        >
          <div class="bg-gradient-to-br from-adesa-green/20 to-adesa-dark/20 p-16 flex items-center justify-center border-b border-white/5">
            <span class="text-8xl group-hover:scale-110 transition-transform duration-300">{noticia.imagen}</span>
          </div>

          <div class="p-8">
            <div class="flex items-center gap-3 mb-4">
              <span class="badge badge-green">{noticia.categoria}</span>
              <span class="text-sm text-gray-500">{noticia.fecha}</span>
            </div>

            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-adesa-green transition-colors">
              {noticia.titulo}
            </h3>

            <p class="text-gray-400 text-sm mb-6 leading-relaxed">
