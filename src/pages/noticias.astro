          data-categoria={noticia.categoria}
        >
          <div class="bg-linear-to-br from-adesa-green to-adesa-dark p-16 flex items-center justify-center">
            <span class="text-9xl group-hover:scale-110 transition-transform">{noticia.imagen}</span>
          </div>
          
          <div class="p-8">
            <div class="flex items-center gap-3 mb-4">
              <span class="px-3 py-1 bg-adesa-green/10 text-adesa-green font-semibold rounded-full text-sm">
