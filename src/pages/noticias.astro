    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {noticias.filter(n => !n.destacada).map((noticia) => (
        <div
          class="noticia-card card group overflow-hidden"
          data-categoria={noticia.categoria}
        >
