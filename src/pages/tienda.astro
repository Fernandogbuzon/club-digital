    const filterButtons = document.querySelectorAll('.categoria-filter');
    const productoCards = document.querySelectorAll('.producto-card');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const categoria = button.getAttribute('data-categoria');
        
        // Update active state
        filterButtons.forEach(btn => {
          btn.classList.remove('bg-adesa-green', 'text-white', 'shadow-lg');
          btn.classList.add('bg-gray-100', 'text-gray-700');
        });
        button.classList.remove('bg-gray-100', 'text-gray-700');
        button.classList.add('bg-adesa-green', 'text-white', 'shadow-lg');
        
        // Filter products
        productoCards.forEach(card => {
          if (categoria === 'all' || card.getAttribute('data-categoria') === categoria) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });
