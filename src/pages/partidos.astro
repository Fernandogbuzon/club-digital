<Layout title="Partidos y Resultados - ADESA 80">
  <!-- Carrusel estilo NBA -->
  <PartidosCarousel />

  <!-- ========== CATEGOR√çAS ========== -->
  <section id="zonaLiga" class="bg-white pt-6 pb-8">
    <div class="max-w-7xl mx-auto px-6">
      <h2 id="categoriasTitle" class="text-sm font-bold text-gray-300 uppercase tracking-widest mb-4">Categor√≠as</h2>

      <!-- Overview por defecto -->
      <div id="overviewPanel">
        <div class="grid gap-3" style="grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));">
          {equiposOverview.map(eq => (
            <div class="equipo-overview rounded-lg overflow-hidden cursor-pointer transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg border border-gray-100 flex items-stretch bg-white" style="height: 68px;" data-cat={eq.cat}>
              <div class="flex flex-col justify-center px-4 flex-1 min-w-0">
                <p class="font-extrabold text-[14px] text-gray-900 uppercase tracking-wide leading-tight truncate">{eq.nombre}</p>
                <p class="text-[12px] font-bold text-gray-400 mt-0.5">{eq.pg}-{eq.pp}</p>
              </div>
              <div class="flex items-center justify-center px-4 flex-shrink-0">
                {eq.pos ? (
                  <span class="font-black text-adesa-green leading-none" style="font-size: 36px;">{eq.pos}</span>
                ) : (
                  <span class="font-black text-gray-200 leading-none" style="font-size: 36px;">-</span>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Panel de detalle (oculto por defecto) -->
      <div id="detailPanel" class="hidden">
        <button id="btnVolverOverview" class="mb-5 flex items-center gap-2 text-adesa-green hover:text-white font-semibold text-sm transition-colors group">
          <span class="transform group-hover:-translate-x-1 transition-transform">‚Üê</span> Volver
        </button>
        <div id="detailContent">
          <!-- Relleno din√°mico por JavaScript -->
        </div>
      </div>
    </div>
  </section>

  <!-- Datos de liga serializados para JavaScript -->
  <script define:vars={{ ligaDataJSON, equiposOverviewJSON }}>
    window.__ligaData = JSON.parse(ligaDataJSON);
    window.__overviewData = JSON.parse(equiposOverviewJSON);
  </script>

  <!-- Script Zona Liga -->
  <script>
    // ========== ZONA LIGA - PANEL DE DETALLE ==========
    const _ld = (window as any).__ligaData || {};
    const _od = (window as any).__overviewData || [];
    const detailPanel = document.getElementById('detailPanel');
    const overviewPanel = document.getElementById('overviewPanel');
    const detailContent = document.getElementById('detailContent');
    const zonaLiga = document.getElementById('zonaLiga');
    const categoriasTitle = document.getElementById('categoriasTitle');
    const btnVolver = document.getElementById('btnVolverOverview');

    function mostrarOverview() {
      if (detailPanel) detailPanel.classList.add('hidden');
      if (overviewPanel) overviewPanel.classList.remove('hidden');
      if (categoriasTitle) { categoriasTitle.textContent = 'Categor√≠as'; categoriasTitle.classList.remove('hidden'); }
    }

    function mostrarDetalle(categoria: string, rivalDestacado?: string) {
      // Buscar en ligaData: primero directo, luego sin sufijo " B" (equipos B del carrusel)
      let liga = _ld[categoria];
      if (!liga) {
        const stripped = categoria.replace(/ B$/, '');
        if (stripped !== categoria) liga = _ld[stripped];
      }
      if (!liga || !detailContent || !detailPanel || !overviewPanel) return;

      overviewPanel.classList.add('hidden');
      detailPanel.classList.remove('hidden');
      if (categoriasTitle) categoriasTitle.classList.add('hidden');

      let html = '';

      // === GRID: Clasificaci√≥n + Jornadas ===
      html += '<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">';

      // --- CLASIFICACI√ìN ---
      html += '<div class="lg:col-span-1">';
      html += '<div class="bg-white rounded-2xl border-2 border-gray-100 overflow-hidden shadow-lg sticky top-4">';
      html += '<div class="bg-adesa-dark text-white px-5 py-3"><h3 class="font-bold text-sm tracking-wide">üìä Clasificaci√≥n</h3></div>';
      html += '<div class="overflow-x-auto">';
      html += '<table class="w-full text-xs">';
      html += '<thead><tr class="bg-gray-50 text-gray-500 uppercase tracking-wider text-[10px]">';
      html += '<th class="px-2 py-2 text-center">#</th><th class="px-2 py-2 text-left">Equipo</th>';
      html += '<th class="px-2 py-2 text-center">PJ</th><th class="px-2 py-2 text-center">PG</th>';
      html += '<th class="px-2 py-2 text-center">PP</th>';
      html += '<th class="px-2 py-2 text-center hidden sm:table-cell">PF</th>';
      html += '<th class="px-2 py-2 text-center hidden sm:table-cell">PC</th>';
      html += '<th class="px-2 py-2 text-center hidden sm:table-cell">DIF</th>';
      html += '<th class="px-2 py-2 text-center">PTS</th>';
      html += '</tr></thead><tbody>';

      for (const eq of liga.c) {
        const esAdesa = eq.equipo === 'ADESA 80' || (eq.equipo && eq.equipo.includes('ADESA'));
        const esRival = rivalDestacado && eq.equipo && eq.equipo.toUpperCase() === rivalDestacado.toUpperCase();
        const bg = esAdesa ? 'bg-adesa-green/10' : esRival ? 'bg-amber-50' : '';
        const fw = esAdesa ? 'font-bold' : '';
        html += '<tr class="' + bg + ' ' + fw + ' border-b border-gray-50 hover:bg-gray-50 transition-colors">';
        html += '<td class="px-2 py-2.5 text-center font-bold ' + (esAdesa ? 'text-adesa-green' : 'text-gray-400') + '">' + eq.posicion + '</td>';
        html += '<td class="px-2 py-2.5 ' + (esAdesa ? 'text-adesa-green font-bold' : 'text-gray-700') + ' whitespace-nowrap">' + (esAdesa ? 'üü¢ ' : '') + eq.equipo + '</td>';
        html += '<td class="px-2 py-2.5 text-center text-gray-600">' + eq.partidos_jugados + '</td>';
        html += '<td class="px-2 py-2.5 text-center text-green-600 font-medium">' + eq.partidos_ganados + '</td>';
        html += '<td class="px-2 py-2.5 text-center text-red-500 font-medium">' + eq.partidos_perdidos + '</td>';
        html += '<td class="px-2 py-2.5 text-center text-gray-500 hidden sm:table-cell">' + (eq.puntos_favor || '-') + '</td>';
        html += '<td class="px-2 py-2.5 text-center text-gray-500 hidden sm:table-cell">' + (eq.puntos_contra || '-') + '</td>';
        const dif = eq.diferencia || 0;
        const difColor = dif > 0 ? 'text-green-600' : dif < 0 ? 'text-red-500' : 'text-gray-500';
        html += '<td class="px-2 py-2.5 text-center font-medium hidden sm:table-cell ' + difColor + '">' + (dif > 0 ? '+' : '') + dif + '</td>';
        html += '<td class="px-2 py-2.5 text-center font-bold ' + (esAdesa ? 'text-adesa-green' : 'text-gray-900') + '">' + eq.puntos + '</td>';
        html += '</tr>';
      }
      html += '</tbody></table></div></div></div>';

      // --- JORNADAS ---
      html += '<div class="lg:col-span-2">';
      html += '<div class="bg-white rounded-2xl border-2 border-gray-100 overflow-hidden shadow-lg">';
      html += '<div class="bg-adesa-dark text-white px-5 py-3 flex items-center justify-between">';
      html += '<h3 class="font-bold text-sm tracking-wide">üìÖ Jornadas</h3>';
      html += '<span class="text-xs text-white/60">' + liga.j.length + ' jornadas</span>';
      html += '</div>';
      html += '<div class="divide-y divide-gray-100 max-h-[650px] overflow-y-auto zona-liga-scroll">';

      for (const jornada of liga.j) {
        html += '<div class="jornada-bloque">';
        html += '<div class="px-5 py-2.5 bg-gray-50/80 text-xs font-bold text-gray-600 uppercase tracking-wider border-b border-gray-100">' + jornada.n + '</div>';

        for (const p of jornada.p) {
          const esAdesa = p.a;
          const tieneRes = p.ml !== null && p.mv !== null && p.ml !== '' && p.mv !== '';
          const border = esAdesa ? 'border-l-4 border-l-adesa-green bg-adesa-green/5' : 'border-l-4 border-l-transparent';
          html += '<div class="px-5 py-2.5 flex items-center text-xs ' + border + ' hover:bg-gray-50/50 transition-colors">';

          // Local
          const lAdesa = p.l === 'ADESA 80' || (p.l && p.l.includes('ADESA'));
          html += '<div class="flex-1 text-right truncate pr-2 ' + (lAdesa ? 'font-bold text-adesa-green' : 'text-gray-700') + '">' + p.l + '</div>';

          // Score / date
          if (tieneRes) {
            html += '<div class="px-3 py-1 rounded-lg bg-gray-900 text-white font-bold text-xs whitespace-nowrap min-w-[60px] text-center">' + p.ml + ' - ' + p.mv + '</div>';
          } else {
            html += '<div class="px-3 py-1 rounded-lg bg-gray-100 text-gray-400 text-[10px] whitespace-nowrap min-w-[60px] text-center">' + p.f + (p.h ? ' ¬∑ ' + p.h : '') + '</div>';
          }

          // Visitante
          const vAdesa = p.v === 'ADESA 80' || (p.v && p.v.includes('ADESA'));
          html += '<div class="flex-1 truncate pl-2 ' + (vAdesa ? 'font-bold text-adesa-green' : 'text-gray-700') + '">' + p.v + '</div>';

          html += '</div>';
        }
        html += '</div>';
      }

      html += '</div></div></div>';
      html += '</div>'; // End grid

      // === H2H ===
      if (rivalDestacado) {
        const h2h: any[] = [];
        for (const j of liga.j) {
          for (const p of j.p) {
            if (!p.a) continue;
            const rUp = rivalDestacado.toUpperCase();
            if ((p.l.toUpperCase() === rUp || p.v.toUpperCase() === rUp) && p.ml !== null && p.mv !== null) {
              h2h.push({ ...p, jornada: j.n });
            }
          }
        }
        if (h2h.length > 0) {
          html += '<div class="mt-8 bg-white rounded-2xl border-2 border-gray-100 overflow-hidden shadow-lg">';
          html += '<div class="bg-amber-500 text-white px-5 py-3"><h3 class="font-bold text-sm tracking-wide">‚öîÔ∏è Enfrentamientos directos vs ' + rivalDestacado + '</h3></div>';
          html += '<div class="divide-y divide-gray-50">';
          for (const p of h2h) {
            const adLocal = p.l === 'ADESA 80' || (p.l && p.l.includes('ADESA'));
            const ptsAdesa = adLocal ? parseInt(p.ml) : parseInt(p.mv);
            const ptsRival = adLocal ? parseInt(p.mv) : parseInt(p.ml);
            const victoria = ptsAdesa > ptsRival;
            const badgeCls = victoria ? 'bg-adesa-green text-white' : 'bg-red-500 text-white';
            const badge = victoria ? 'V' : 'D';
            html += '<div class="px-5 py-4 flex items-center gap-4">';
            html += '<span class="inline-flex items-center justify-center w-8 h-8 rounded-full text-xs font-bold ' + badgeCls + '">' + badge + '</span>';
            html += '<div class="flex-1">';
            html += '<p class="text-sm font-medium text-gray-900">' + p.l + ' <span class="font-bold text-lg mx-1">' + p.ml + ' - ' + p.mv + '</span> ' + p.v + '</p>';
            html += '<p class="text-xs text-gray-500">' + p.jornada + ' ¬∑ ' + p.f + '</p>';
            html += '</div></div>';
          }
          html += '</div></div>';
        }
      }

      detailContent.innerHTML = html;

      // Scroll suave a la zona liga
      setTimeout(() => {
        if (zonaLiga) zonaLiga.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }, 100);
    }

    // Click en tarjetas del overview
    document.querySelectorAll('.equipo-overview').forEach(card => {
      card.addEventListener('click', () => {
        const cat = card.getAttribute('data-cat');
        if (cat) mostrarDetalle(cat);
      });
    });

    // Click en tarjetas del carrusel
    document.querySelectorAll('.mc').forEach(card => {
      card.addEventListener('click', (e) => {
        if ((e.target as HTMLElement).closest('a')) return;
        const cat = card.getAttribute('data-liga') || (card as HTMLElement).dataset.liga;
        const rival = card.getAttribute('data-rival') || (card as HTMLElement).dataset.rival;
        if (cat) mostrarDetalle(cat, rival || undefined);
      });
    });

    // Bot√≥n volver
    if (btnVolver) {
      btnVolver.addEventListener('click', mostrarOverview);
    }
  </script>

  <style>
    .zona-liga-scroll {
      scrollbar-width: thin;
      scrollbar-color: #d1d5db transparent;
    }
    .zona-liga-scroll::-webkit-scrollbar {
      width: 6px;
    }
    .zona-liga-scroll::-webkit-scrollbar-track {
      background: transparent;
    }
    .zona-liga-scroll::-webkit-scrollbar-thumb {
      background-color: #d1d5db;
      border-radius: 3px;
    }
    .zona-liga-scroll::-webkit-scrollbar-thumb:hover {
      background-color: #9ca3af;
    }
  </style>
</Layout>
